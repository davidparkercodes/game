    private SoundManagerService? GetSoundManager()
    {
        if (_soundManager == null)
        {
            try
            {
                _soundManager = SoundManagerService.Instance;
            }
            catch (Exception)
            {
                // Handle case where Godot services aren't available
                _soundManager = null;
